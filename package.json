{
  "name": "@melonproject/melon.js",
  "version": "0.7.6",
  "description": "Reusable JS API to query/interact with the Melon protocol",
  "main": "build/main.js",
  "esnext": "lib/main.js",
  "directories": {
    "lib": "./lib",
    "doc": "./docs",
    "test": "./tests"
  },
  "sign-git-tag": true,
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": "^8.0.0",
    "npm": "^5.0.0"
  },
  "scripts": {
    "babel:watch": "babel lib -w -d build",
    "babel": "babel lib -d build",
    "build": "npm run walklib && npm run babel",
    "depcheck:json": "depcheck --ignores=husky --json",
    "depcheck": "depcheck --ignores=husky,debug,eslint-config-prettier,eslint-plugin-prettier,prettier",
    "deploy:alpha": "npm version prerelease --git-tag-version false && npm publish --tag alpha ",
    "deploy": "npm run build && npm version patch && npm publish",
    "docs": "documentation build lib/** -f html -o docs --sort-order alpha",
    "flow": "flow",
    "format": "prettier-eslint --write \"lib/**/*.js\" && prettier-eslint --write \"tests/**/*.js\"",
    "jasemine": "babel-node tests/integration/run",
    "jest:watch": "jest --config tests/unit/jest.config.json --watch",
    "jest": "jest --config tests/unit/jest.config.json --coverage",
    "lint": "eslint .",
    "postversion": "git push && git push --tags",
    "precommit": "lint-staged",
    "pretest": "npm run build && npm run lint --silent && npm run depcheck",
    "scratchpad": "babel-node tests/scratchpad/run",
    "test:integration": "npm run jasemine",
    "test:unit": "npm run jest",
    "test": "echo npm run jest",
    "walklib": "babel-node ./scripts/walkLib.js"
  },
  "lint-staged": {
    "*.js": [
      "npm run format",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/melonproject/melon.js.git"
  },
  "keywords": [
    "melon",
    "melonproject",
    "javascript",
    "ethereum",
    "api"
  ],
  "author": "Simon Emanuel Schmid <simon@melonport.com>",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/melonproject/melon.js/issues"
  },
  "homepage": "https://github.com/melonproject/melon.js#readme",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^8.1.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-stage-0": "^6.24.1",
    "babel-runtime": "^6.26.0",
    "debug": "^3.1.0",
    "depcheck": "^0.6.7",
    "documentation": "^5.3.3",
    "eslint": "^4.3.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-flowtype": "^2.35.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^2.5.0",
    "eslint-plugin-react": "^7.1.0",
    "flow-bin": "^0.66.0",
    "husky": "^0.14.3",
    "jasmine": "^2.7.0",
    "jest": "^22.1.2",
    "lint-staged": "^6.0.0",
    "prettier": "1.10.2",
    "prettier-eslint-cli": "4.7.0",
    "walk": "^2.3.9"
  },
  "dependencies": {
    "@melonproject/protocol": "^0.8.0-alpha.6",
    "@parity/api": "^2.1.5",
    "bignumber.js": "^5.0.0",
    "bip39": "^2.4.0",
    "ethers-utils": "^2.1.8",
    "ethers-wallet": "^2.1.6",
    "ramda": "^0.25.0",
    "web3": "^0.20.4"
  }
}
