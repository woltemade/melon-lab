{
  "name": "@melonproject/melon.js",
  "version": "0.0.0",
  "description": "Reusable JS API to query/interact with the Melon protocol",
  "main": "index.js",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "test": "jest",
    "lint": "eslint .",
    "pretest": "npm run lint --silent",
    "format": "prettier-eslint --write \"lib/**/*.js\"",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": ["npm run format", "git add"]
  },
  "jest": {
    "testMatch": ["**/tests/unit/**/*.js?(x)", "**/?(*.)(spec|test).js?(x)"]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/melonproject/melon.js.git"
  },
  "keywords": ["melon", "melonproject", "javascript", "ethereum", "api"],
  "author": "Simon Emanuel Schmid <simon@melonport.com>",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/melonproject/melon.js/issues"
  },
  "homepage": "https://github.com/melonproject/melon.js#readme",
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "eslint": "^4.3.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-config-prettier": "^2.3.0",
    "eslint-plugin-flowtype": "^2.35.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.1.0",
    "husky": "^0.14.3",
    "jest": "^20.0.4",
    "lint-staged": "^4.0.2",
    "prettier-eslint-cli": "^4.1.1"
  },
  "dependencies": {
    "@melonproject/protocol": "0.2.0-alpha.17",
    "bignumber.js": "^4.0.2",
    "truffle-contract": "^2.0.3"
  }
}
