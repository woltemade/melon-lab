{
  "name": "@melonproject/ipfs-frontend",
  "version": "0.0.0",
  "private": true,
  "license": "AGPL-3.0",
  "workspaces": {
    "nohoist": [
      "react-scripts",
      "react-scripts/**"
    ]
  },
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build && npm run-script build:postprocess",
    "build:dev": "react-app-rewired build && npm run rename-absolute-path",
    "build:postprocess": "npm run-script delete-maps && npm run-script rename-absolute-path",
    "delete-maps": "find ./build -name '*.map' -delete",
    "rename-absolute-path": "sed -i -e 's@/static/js@./static/js@g' ./build/index.html",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run --record",
    "lint": "eslint ./",
    "semantic:build": "cd public/semantic && gulp build",
    "semantic:watch": "cd public/semantic && gulp",
    "storybook:build": "build-storybook -s public -o .out -c tests/storybook",
    "storybook": "start-storybook -p 9001 -c tests/storybook -s public",
    "test": "react-app-rewired test --env=jsdom",
    "snyk-protect": "snyk protect"
  },
  "author": "Melonport <team@melonport.com>",
  "contributors": [
    "Simon Emanuel Schmid <simon@schmid.io>",
    "Sebastian Siemssen <fubhy@fubhy.com>",
    "Jenna Zenk <jenna@melonport.com>"
  ],
  "dependencies": {
    "@melonproject/melon.js": "^0.7.6",
    "@melonproject/protocol": "0.7.2-alpha.1",
    "apollo": "^0.2.2",
    "apollo-cache-inmemory": "^1.1.12",
    "apollo-client": "^2.2.8",
    "apollo-link-schema": "^1.1.0",
    "apollo-link-webworker": "^0.1.3",
    "apollo-react": "^0.7.1",
    "babel-polyfill": "^6.23.0",
    "bignumber.js": "^5.0.0",
    "bn.js": "^4.11.8",
    "ethers": "^2.1.3",
    "flat": "^4.0.0",
    "gulp": "^4.0.0",
    "history": "^4.7.2",
    "moment": "^2.20.1",
    "ramda": "^0.25.0",
    "react": "^16.2.0",
    "react-app-rewired": "^1.0.17",
    "react-cntdwn": "^0.3.0",
    "react-dom": "^16.2.0",
    "react-highlighter": "^0.4.2",
    "react-modal": "^3.1.10",
    "react-redux": "^5.0.6",
    "react-scripts": "^1.0.17",
    "recompose": "^0.26.0",
    "redux": "^3.7.2",
    "redux-first-router": "0.0.4-rudy",
    "redux-first-router-link": "^1.4.2",
    "redux-form": "^7.2.0",
    "redux-saga": "^0.16.0",
    "semantic-ui-react": "^0.77.1",
    "slugify": "^1.2.9"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.3.14",
    "@storybook/addon-info": "^3.3.14",
    "@storybook/addon-knobs": "^3.3.14",
    "@storybook/react": "^3.3.14",
    "gh-pages": "^1.1.0",
    "graphql-tag": "^2.9.1",
    "snyk": "^1.68.0",
    "wait-on": "^2.0.2",
    "worker-loader": "^1.1.1"
  },
  "snyk": true,
  "browserslist": {
    "development": [
      "last 2 chrome versions",
      "last 2 firefox versions",
      "last 2 edge versions"
    ],
    "production": [
      ">1%",
      "last 4 versions",
      "Firefox ESR",
      "not ie < 11"
    ]
  }
}
